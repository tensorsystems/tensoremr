type MedicalPrescriptionOrder {
  id: ID!
  pharmacyId: ID!
  pharmacy: Pharmacy!
  patientChartId: ID!
  orderedById: ID
  orderedBy: User
  firstName: String!
  lastName: String!
  phoneNo: String!
  userName: String!
  status: String!
  medicalPrescriptions: [MedicalPrescription]!
  createdAt: Time
}

type EyewearPrescriptionOrder {
  id: ID!
  eyewearShopId: ID!
  eyewearShop: EyewearShop!
  patientChartId: ID!
  orderedById: ID
  orderedBy: User
  firstName: String!
  lastName: String!
  phoneNo: String!
  userName: String!
  status: String!
  eyewearPrescriptions: [EyewearPrescription]!
  createdAt: Time
}

type MedicalPrescription {
  id: ID!
  medicalPrescriptionOrderId: ID
  medication: String!
  rxCui: String
  synonym: String
  tty: String
  language: String
  sig: String
  refill: Int
  generic: Boolean
  substitutionAllowed: Boolean
  directionToPatient: String
  prescribedDate: Time
  history: Boolean!
  status: String!
}

type EyewearPrescription {
  id: ID!
  eyewearPrescriptionOrderId: ID!
  glass: Boolean
  plastic: Boolean
  singleVision: Boolean
  photoChromatic: Boolean
  glareFree: Boolean
  scratchResistant: Boolean
  bifocal: Boolean
  progressive: Boolean
  twoSeparateGlasses: Boolean
  highIndex: Boolean
  tint: Boolean
  blueCut: Boolean
  polarized: Boolean
  polarizedClip: Boolean
  prescribedDate: Time
  history: Boolean!
  status: String!
}

type MedicalPrescriptionEdge {
  node: MedicalPrescription!
}

type EyewearPrescriptionEdge {
  node: EyewearPrescription!
}

type MedicalPrescriptionOrderEdge {
  node: MedicalPrescriptionOrder!
}

type EyewearPrescriptionOrderEdge {
  node: EyewearPrescriptionOrder!
}

type MedicalPrescriptionConnection implements Connection {
  totalCount: Int!
  pageInfo: PageInfo!
  edges: [MedicalPrescriptionEdge]!
}

type EyewearPrescriptionConnection implements Connection {
  totalCount: Int!
  pageInfo: PageInfo!
  edges: [EyewearPrescriptionEdge]!
}

type MedicalPrescriptionOrderConnection implements Connection {
  totalCount: Int!
  pageInfo: PageInfo!
  edges: [MedicalPrescriptionOrderEdge!]!
}

type EyewearPrescriptionOrderConnection implements Connection {
  totalCount: Int!
  pageInfo: PageInfo!
  edges: [EyewearPrescriptionOrderEdge!]!
}

input MedicalPrescriptionOrderInput {
  patientChartId: ID!
  patientId: ID!
  pharmacyId: ID!
  medication: String!
  rxCui: String
  synonym: String
  tty: String
  language: String
  sig: String
  refill: Int
  generic: Boolean
  substitutionAllowed: Boolean
  directionToPatient: String
  prescribedDate: Time
  history: Boolean!
  status: String
}

input MedicalPrescriptionInput {
  patientId: ID!
  medication: String!
  rxCui: String
  synonym: String
  tty: String
  language: String
  sig: String
  refill: Int
  generic: Boolean
  substitutionAllowed: Boolean
  directionToPatient: String
  prescribedDate: Time
  history: Boolean!
  status: String
}

input EyewearPrescriptionInput {
  patientChartId: ID!
  patientId: ID!
  glass: Boolean
  plastic: Boolean
  singleVision: Boolean
  photoChromatic: Boolean
  glareFree: Boolean
  scratchResistant: Boolean
  bifocal: Boolean
  progressive: Boolean
  twoSeparateGlasses: Boolean
  highIndex: Boolean
  tint: Boolean
  blueCut: Boolean
  polarized: Boolean
  polarizedClip: Boolean
  prescribedDate: Time
  history: Boolean!
  eyewearShopId: ID!
  status: String
}

input MedicationPrescriptionUpdateInput {
  id: ID!
  pharmacyId: ID
  status: String
}

input EyewearPrescriptionOrderUpdateInput {
  id: ID!
  pharmacyId: ID
  status: String
}

input MedicalPrescriptionUpdateInput {
  id: ID!
  pharmacyId: ID
  medication: String
  rxCui: String
  synonym: String
  tty: String
  language: String
  sig: String
  refill: Int
  generic: Boolean
  substitutionAllowed: Boolean
  directionToPatient: String
  prescribedDate: Time
  eyewearShopId: ID
  status: String
}

input EyewearPrescriptionUpdateInput {
  id: ID!
  glass: Boolean
  plastic: Boolean
  singleVision: Boolean
  photoChromatic: Boolean
  glareFree: Boolean
  scratchResistant: Boolean
  bifocal: Boolean
  progressive: Boolean
  twoSeparateGlasses: Boolean
  highIndex: Boolean
  tint: Boolean
  blueCut: Boolean
  polarized: Boolean
  polarizedClip: Boolean
  prescribedDate: Time
  history: Boolean
  status: String
