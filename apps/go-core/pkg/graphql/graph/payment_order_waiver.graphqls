type PaymentOrderWaiver {
  id: ID!
  orderId: ID!
  orderType: String!
  userId: ID!
  user: User!
  patientId: ID!
  patient: Patient!
  approved: Boolean
}

type PaymentOrderWaiverEdge {
  node: PaymentOrderWaiver!
}

type PaymentOrderWaiverConnection implements Connection {
  totalCount: Int!
  pageInfo: PageInfo!
  edges: [PaymentOrderWaiverEdge]!
}

input PaymentOrderWaiverInput {
  orderId: ID!
  orderType: String!
  patientId: ID!
}

input PaymentOrderWaiverUpdateInput {
  id: ID!
  orderId: ID
  orderType: String
  patientId: ID
  approved: Boolean
}

extend type Query {
  paymentOrderWaivers(page: PaginationInput!): PaymentOrderWaiverConnection!
  paymentOrderWaiver(id: ID!): PaymentOrderWaiver!
}

extend type Mutation {
  savePaymentOrderWaiver(input: PaymentOrderWaiverInput!): PaymentOrderWaiver!
  updatePaymentOrderWaiver(
    input: PaymentOrderWaiverUpdateInput!
  ): PaymentOrderWaiver!
  deletePaymentOrderWaiver(id: ID!): Boolean!
  approvePaymentOrderWaiver(id: ID!, approve: Boolean!): PaymentOrderWaiver!
  requestPaymentOrderWaiver(
    orderId: ID!
    orderType: String
    patientId: ID!
  ): PaymentOrderWaiver!
}
