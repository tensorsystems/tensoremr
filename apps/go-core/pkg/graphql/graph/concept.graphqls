type Concept {
  sctid: String!
  caseSignificanceId: String!
  nodetype: String!
  acceptabilityId: String!
  refsetId: String!
  languageCode: String!
  descriptionType: String!
  term: String!
  typeId: String!
  moduleId: String!
}

type ConceptAttributes {
  subjectRelationshipContext: String 
  findingContext: String
  temporalContext: String
  associatedFinding: String
}

enum Pertinence {
  POSITIVE
  NEGATIVE
}

extend type Query {
  historyOfDisorderConcepts(size: Int, searchTerm: String, pertinence: Pertinence): [Concept!]!
  familyIllnessConcepts(size: Int, searchTerm: String, pertinence: Pertinence) : [Concept!]!
  procedureConcepts(size: Int, searchTerm: String, pertinence: Pertinence) : [Concept!]!
  conceptAttributes(conceptId: String!): ConceptAttributes!
}
