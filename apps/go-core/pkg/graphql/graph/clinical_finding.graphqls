type ClinicalFinding {
  id: ID!
  patientChartId: ID!
  patientId: ID!
  conceptId: String
  parentConceptId: String
  conceptTerm: String!
  attributes: [ClinicalFindingAttribute!]!
  createdById: ID!
  updatedById: ID!
  freeTextNote: String
  authority: String
}

type ClinicalFindingAttribute {
  id: ID!
  clinicalFindingId: ID!
  attributeTypeId: String!
  attributeId: String!
  attributeTerm: String!
}

input ClinicalFindingInput {
  conceptId: String!
  term: String!
  attributes: [String!]
  freeTextNote: String
  patientChartId: Int!
}

input ClinicalFindingUpdateInput {
  id: ID!
  conceptId: String
  term: String
  freeTextNote: String
}

extend type Mutation {
  saveDisorderHistory(input: ClinicalFindingInput!): ClinicalFinding!
  saveSurgicalHistory(input: ClinicalFindingInput!): ClinicalFinding!
  saveMentalHistory(input: ClinicalFindingInput!): ClinicalFinding!
  saveImmunizationHistory(input: ClinicalFindingInput!): ClinicalFinding!
  saveAllergyHistory(input: ClinicalFindingInput!): ClinicalFinding!
  saveIntoleranceHistory(input: ClinicalFindingInput!): ClinicalFinding!

  updateDisorderHistory(input: ClinicalFindingUpdateInput!): ClinicalFinding!
}
