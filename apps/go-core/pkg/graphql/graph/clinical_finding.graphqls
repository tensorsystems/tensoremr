type ClinicalFinding {
  id: ID!
  patientChartId: ID!
  patientId: ID!
  conceptId: String
  parentConceptId: String
  conceptTerm: String!
  attributes: [ClinicalFindingAttribute!]!
  createdById: ID!
  updatedById: ID!
  freeTextNote: String
  authority: String
  createdAt: Time!
  updatedAt: Time!
}

type ClinicalFindingEdge {
  node: ClinicalFinding!
}

type ClinicalFindingConnection implements Connection {
  totalCount: Int!
  pageInfo: PageInfo!
  edges: [ClinicalFindingEdge!]!
}

type ClinicalFindingAttribute {
  id: ID!
  clinicalFindingId: ID!
  attributeTypeId: String!
  attributeId: String!
  attributeTerm: String!
}

input ClinicalFindingInput {
  conceptId: String!
  term: String!
  attributes: [String!]
  freeTextNote: String
  patientChartId: Int!
}

input ClinicalFindingUpdateInput {
  id: ID!
  conceptId: String
  term: String
  freeTextNote: String
}

input ClinicalFindingFilter {
  patientId: String
  patientChartId: String
  conceptId: String
  parentConceptId: String
  conceptTerm: String
}

extend type Query {
  patientDisorderHistory(
    page: PaginationInput!
    filter: ClinicalFindingFilter
  ): ClinicalFindingConnection!

  patientSurgicalHistory(
    page: PaginationInput!
    filter: ClinicalFindingFilter
  ): ClinicalFindingConnection!
  patientMentalHistory(
    page: PaginationInput!
    filter: ClinicalFindingFilter
  ): ClinicalFindingConnection!
  patientImmunizationHistory(
    page: PaginationInput!
    filter: ClinicalFindingFilter
  ): ClinicalFindingConnection!
  patientAllergyHistory(
    page: PaginationInput!
    filter: ClinicalFindingFilter
  ): ClinicalFindingConnection!
  patientIntoleranceHistory(
    page: PaginationInput!
    filter: ClinicalFindingFilter
  ): ClinicalFindingConnection!
  patientHospitalizationHistory(
    page: PaginationInput!
    filter: ClinicalFindingFilter
  ): ClinicalFindingConnection!

  patientClinicalFindingHistory(
    page: PaginationInput!
    filter: ClinicalFindingFilter
  ): ClinicalFindingConnection!
}

extend type Mutation {
  deleteClinicalFinding(id: ID!): Boolean!

  saveDisorderHistory(input: ClinicalFindingInput!): ClinicalFinding!
  updateDisorderHistory(input: ClinicalFindingUpdateInput!): ClinicalFinding!

  saveSurgicalHistory(input: ClinicalFindingInput!): ClinicalFinding!
  updateSurgicalHistory(input: ClinicalFindingUpdateInput!): ClinicalFinding!

  saveMentalHistory(input: ClinicalFindingInput!): ClinicalFinding!
  updateMentalHistory(input: ClinicalFindingUpdateInput!): ClinicalFinding!

  saveImmunizationHistory(input: ClinicalFindingInput!): ClinicalFinding!
  updateImmunizationHistory(
    input: ClinicalFindingUpdateInput!
  ): ClinicalFinding!

  saveAllergyHistory(input: ClinicalFindingInput!): ClinicalFinding!
  updateAllergyHistory(input: ClinicalFindingUpdateInput!): ClinicalFinding!

  saveIntoleranceHistory(input: ClinicalFindingInput!): ClinicalFinding!
  updateIntoleranceHistory(input: ClinicalFindingUpdateInput!): ClinicalFinding!

  savePatientHospitalizationHistory(input: ClinicalFindingInput!): ClinicalFinding!

  savePatientClinicalFindingHistory(input: ClinicalFindingInput!): ClinicalFinding!
}
