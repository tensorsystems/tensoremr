type Concept {
  sctid: String!
  fsn: String!
  definitionStatusId: String!
  active: String!
  moduleId: String!
}

type ConceptDescription {
  sctid: String!
  caseSignificanceId: String!
  nodetype: String!
  acceptabilityId: String!
  refsetId: String!
  languageCode: String!
  descriptionType: String!
  term: String!
  typeId: String!
  moduleId: String!
}

type ConceptAttributes {
  subjectRelationshipContext: String 
  findingContext: String
  temporalContext: String
  associatedFinding: String
}

type ConceptChild {
  concept: Concept!
  description: ConceptDescription!
  childrenCount: Int!
}

enum Pertinence {
  POSITIVE
  NEGATIVE
}

extend type Query {
  historyOfDisorderConcepts(size: Int, searchTerm: String, pertinence: Pertinence): [ConceptDescription!]!
  familyIllnessConcepts(size: Int, searchTerm: String, pertinence: Pertinence) : [ConceptDescription!]!
  procedureConcepts(size: Int, searchTerm: String, pertinence: Pertinence): [ConceptDescription!]!
  socialHistoryConcepts(size: Int, searchTerm: String): [ConceptDescription!]!
  lifestyleConcepts(size: Int, searchTerm: String): [ConceptDescription!]!
  administrativeStatusConcepts(size: Int, searchTerm: String): [ConceptDescription!]!
  mentalStateConcepts(size: Int, searchTerm: String): [ConceptDescription!]!
  immunizationConcepts(size: Int, searchTerm: String): [ConceptDescription!]!
  allergicConditionConcepts(size: Int, searchTerm: String): [ConceptDescription!]!
  intoleranceConcepts(size: Int, searchTerm: String): [ConceptDescription!]!
  conceptAttributes(conceptId: String!): ConceptAttributes!
  conceptChildren(conceptId: String!): [ConceptChild!]!
}
